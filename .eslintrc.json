{
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": "airbnb-base",
  "rules": {
    "no-underscore-dangle": [2, {
      "allow": ["__content"]
    }],
    "linebreak-style": 0
  },
  "overrides": [{
    "files": ["test/**/*.js"],
    "env": {
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "rules": {
      "func-names": [0],
      "import/no-extraneous-dependencies": [0],
      "prefer-arrow-callback": [0],
      "arrow-body-style": [0],
      "no-unused-expressions": [0]
    }
  }]
}
